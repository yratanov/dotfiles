{
  "height": 30, // Waybar height (to be removed for auto height)
  "spacing": 4, // Gaps between modules (4px)
  "modules-left": [
    "hyprland/workspaces",
    "custom/media",
    "custom/satchel-vpn",
    "custom/satchel-prs",
  ],
  "modules-center": ["custom/weather", "clock"],
  "modules-right": [
    "pulseaudio",
    "custom/mouse-battery",
    "network",
    "power-profiles-daemon",
    "cpu",
    "memory",
    "temperature",
    "bluetooth",
    "battery",
    "tray",
    "custom/power",
  ],
  // Modules configuration
  "hyprland/workspaces": {
    "format": "{icon} {windows}",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "on-click": "activate",
    "window-rewrite-default": "Ó≠ø ",
    "window-rewrite": {
      "title<.*youtube.*>": "ÔÖ™ ", 
      "class<com.mitchellh.ghostty>": "Óûï ",
      "class<org.telegram.desktop>": "Óàó ",
      "class<TelegramDesktop>": "Óàó ",
      "class<DBeaver>": "Óûø ",
      "class<chromium>": "Ôâ® ",
      "class<discord>": "Ôáø ",
      "class<.*geoguessr.*>": "Ó¨Å ",
      "class<BambuStudio>": "Û∞ê´ ",
      "class<chrome-chatgpt.com__-Default>": "Óäå ",
      "class<chrome-geoguessr.com__-Default>": "ÓΩã ",
      "class<Slack>": "Û∞í± ",
      "class<thunderbird>": "Ó¨ú ",
      "class<vlc>": "Û∞ïº ",
      "class<mpv>": "ÔçÆ ",
      "class<libreoffice-draw>": "",
      "class<libreoffice-writer>": "Óö•",
      "class<libreoffice-calc>": "",
      "class<libreoffice-impress>": "",
    },
  },
  "tray": {
    "spacing": 10,
    // "icons": {
    //   "blueman": "bluetooth",
    //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
    // }
  },
  "clock": {
    "format": "{:%d %b %H:%M}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "on-click": "gnome-calendar",
  },
  "bluetooth": {
    "format": "Ôäî {status}",
    "format-disabled": "",
    "format-connected": "Ôäî {num_connections}",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "on-click": "blueberry",
  },
  "cpu": {
    "format": "{usage}% Ôãõ ",
    "tooltip": false,
    "on-click": "alacritty -e btop",
  },
  "memory": {
    "format": "{}% ÔÉâ ",
    "on-click": "alacritty -e btop",
  },
  "temperature": {
    "critical-threshold": 80,
    "on-click": "alacritty -e btop",
    "format": "{temperatureC}¬∞C",
  },
  "custom/hyprlayout": {
    "exec": "~/.config/waybar/scripts/hyprlayout.sh",
    "interval": 2,
    "format": "{}",
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôóß",
    "format-plugged": "{capacity}% Ôá¶",
    "format-alt": "{time} {icon}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "],
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨",
    },
  },
  "network": {
    "format-wifi": "Ôá´ ({signalStrength}%)",
    "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "tooltip-format": "{essid} {signalStrength}% {ifname} via {gwaddr} Ôûñ",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "Disconnected ‚ö†",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
  },
  "pulseaudio": {
    "scroll-step": 10,
    "format": "{volume}% {icon} {format_source}",
    "tooltip-format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö©  {format_source}",
    "format-source": "",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ ",
      "default": ["ÔÄ¶", "ÔÄß ", "ÔÄ® "],
    },
    "on-click": "pavucontrol",
  },
  "custom/weather": {
    "format": "{}",
    "tooltip": true,
    "interval": 3600,
    "exec": "$HOME/.bin/waybar-weather London",
    "return-type": "json",
    "on-click": "gnome-weather",
  },
  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú",
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "custom/power": {
    "format": "‚èª ",
    "tooltip": false,
    "on-click": "~/.bin/menu-power",
  },
  "custom/satchel-vpn": {
    "name": "vpn",
    "exec": "~/.bin/check_service.sh openvpn-client@satchelcloud SatchelVPN",
    "interval": 10,
    "return-type": "json",
    "format": "{}",
    "tooltip": false,
    "on-click": "~/.bin/toggle_service.sh openvpn-client@satchelcloud",
  },
  "custom/satchel-prs": {
    "exec": "~/.bin/check-gh-review-requests mysencare/pulse-app",
    "interval": 60,
    "return-type": "json",
    "on-click": "xdg-open https://github.com/mysencare/pulse-app/pulls?q=is%3Apr+is%3Aopen+user-review-requested%3A%40me && hyprctl dispatch workspace 1",
  },
  "custom/mouse-battery": {
    "exec": "solaar show 2>/dev/null | grep -i 'Battery:' | head -n1 | awk '{print $2}'",
    "interval": 60,
    "format": "Óæ∫ ({})",
  },
}
